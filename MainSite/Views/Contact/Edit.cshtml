@model Contact
@{
    string title = ViewBag.Action + " Contact";
    ViewData["Title"] = title;
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger">* Required fields</div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name<span class="text-danger">*</span></label>
        <input asp-for="Name" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="Number" class="form-label">Phone Number<span class="text-danger">*</span></label>
        <input asp-for="Number" class="form-control" placeholder="123-456-7890">
    </div>

    <div class="mb-3">
        <label asp-for="Street" class="form-label">Street Address<span class="text-danger">*</span></label>
        <input asp-for="Street" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="City" class="form-label">City<span class="text-danger">*</span></label>
        <input asp-for="City" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="State" class="form-label">State<span class="text-danger">*</span></label>
        <input asp-for="State" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="Zip" class="form-label">Zipcode<span class="text-danger">*</span></label>
        <input asp-for="Zip" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="Note" class="form-label">Note</label>
        <input asp-for="Note" class="form-control">
    </div>

    <input type="hidden" asp-for="ContactId" />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="Home" asp-action="Index"
       class="btn btn-primary">Cancel</a>
</form>